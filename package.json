{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "podflow",
  "title": "Podflow",
  "description": "Quick ways to add new chapter marks",
  "icon": "command-icon.png",
  "author": "floriankimmel",
  "owner": "laufend-entdecken-og",
  "license": "MIT",
  "commands": [
    {
      "name": "add",
      "title": "Add",
      "subtitle": "Add new chapter mark",
      "description": "",
      "mode": "view"
    },
    {
      "name": "start",
      "title": "Start",
      "subtitle": "Start new Podcast Production",
      "description": "",
      "mode": "view"
    },
    {
      "name": "toggle-start-pause",
