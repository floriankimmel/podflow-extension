{
    "$schema": "https://www.raycast.com/schemas/extension.json",
    "name": "podflow",
    "title": "Podflow",
    "description": "Quick ways to add new chapter marks",
    "icon": "icon.png",
    "author": "floriankimmel",
    "owner": "laufend-entdecken-og",
    "license": "MIT",
    "commands": [
        {
            "name": "add",
            "title": "Add",
            "subtitle": "Podflow",
            "description": "Add new chapter mark",
            "mode": "no-view"
        },
        {
            "name": "start",
            "title": "Start",
            "subtitle": "Podflow",
            "description": "Start new Podcast Production",
            "mode": "no-view"
        },
        {
            "name": "toggle-start-pause",
            "title": "Toggle Start/Pause",
            "subtitle": "Podflow",
            "description": "Start/Stop Podcast Production",
            "mode": "no-view"
        },
        {
            "name": "export",
            "title": "Export",
            "subtitle": "Podflow",
            "description": "Export Chapter Marks",
            "mode": "no-view"
        }
    ],
    "dependencies": {
        "@raycast/api": "^1.75.2"
    },
    "devDependencies": {
        "@raycast/eslint-config": "^1.0.6",
        "@types/node": "20.8.10",
        "@types/react": "18.2.27",
        "eslint": "^8.51.0",
        "prettier": "^3.0.3",
        "typescript": "^5.2.2"
    },
    "scripts": {
        "build": "ray build -e dist",
        "dev": "ray develop",
        "fix-lint": "ray lint --fix",
        "lint": "ray lint",
        "publish": "npx @raycast/api@latest publish"
    }
}
